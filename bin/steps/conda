#!/usr/bin/env bash

if [ -f conda-requirements.txt ]; then
	puts-step "Installing conda with pip ..."
	/app/.heroku/python/bin/pip install git+https://github.com/conda/conda.git | cleanup | indent | indent
	puts-step "Initializing conda ..."
	conda init | cleanup | indent
    puts-step "Installing conda packages from conda-requirements.txt ..."
    conda install --file conda-requirements.txt --yes | cleanup | indent
fi

